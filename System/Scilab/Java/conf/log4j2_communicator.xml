<!--Dlog4j.configurationFile="${project_loc}/conf/log4j2.xml" -->
<configuration status="all" verbose="ON" monitorInterval="10" name="X2C Xcos COMMUNICATOR">
    <appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%-5level %class{36} %L %M - %msg%xEx%n" />
            <filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY" />
            </filters>
        </Console>
        <File name="log" fileName="log/log4j_communicator.log" append="false" >
            <PatternLayout pattern="%d %5r %-10level %-20marker %class{36} %L %M - %msg%xEx%n" />
        </File>
    </appenders>
    <loggers>
        <root level="INFO">
            <appender-ref ref="Console" />
        </root>
        <logger name="at.lcm.x2c" level="ALL" additivity="true">
            <appender-ref ref="log" />
        </logger>
    </loggers>
</configuration>